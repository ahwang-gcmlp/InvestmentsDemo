@using System.Configuration
@using System.Security.Policy
@using System.Web.Mvc.Html

@using Newtonsoft.Json

<div class="Summaries" ng-controller="PanelController as panel">
    <script>
        var __plan = @Html.Raw(JsonConvert.SerializeObject(Model.Plan));
    </script>

    <section>
        <div class="secondNav">
            <div class="panelEntry" ng-repeat="tab in planTabs">
                <div ng-class="{ active:panel.isSecondarySelected(tab)}">
                    <a href ng-click="panel.selectSecondaryTab(tab)">{{tab.name}}</a>
                </div>
        
                <div ng-hide="panel.hideLine(tab, planTabs)">
                    <hr/>
                </div>
            </div>

            <br/>
            
        </div>
        
        <div class="summary" ng-repeat="tab in planTabs">
            <div class="innerSummary" ng-show="panel.isSecondarySelected(tab)">
                <h2>{{tab.name}}</h2>
                <p>{{tab.summary}}</p>
                <a href="{{tab.link}}" target="_blank">
                    <img src="/Styles/Images/launch-icon.png"/> Launch Application
                </a>
            </div>
        </div>

    </section>

</div>



